<%= form_with(model: transaction, local: true) do |form| %>
  
  <div class="field">
    <%= form.label :ticker %>
    <%= form.text_field :ticker, id: :stock_ticker %>
  </div>

  <div class="field">
    <%= form.number_field :user_id, id: :stock_user_id, value: current_user.id,
    type: :hidden %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
